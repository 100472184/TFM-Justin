{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "tfm-justin task schema",
  "type": "object",
  "required": ["task_id", "cve", "project", "upstream_repo", "vuln_ref", "fixed_ref", "target", "run"],
  "properties": {
    "task_id": {"type": "string"},
    "cve": {"type": "string"},
    "project": {"type": "string"},
    "upstream_repo": {"type": "string"},
    "vuln_ref": {"type": "string"},
    "fixed_ref": {"type": "string"},
    "notes": {"type": "string"},
    "target": {
      "type": "object",
      "required": ["binary"],
      "properties": {
        "binary": {"type": "string"},
        "workdir": {"type": "string"}
      }
    },
    "run": {
      "type": "object",
      "required": ["argv_template"],
      "properties": {
        "argv_template": {"type": "array", "items": {"type": "string"}},
        "stdin_mode": {"type": "string", "enum": ["none", "file", "pipe"]},
        "timeout_sec": {"type": "integer"}
      }
    }
  }
}
